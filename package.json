{
  "type": "module",
  "name": "twitch-chat-bot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(node-fetch|tmi\\.js|@twurple)/)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node"
    ],
    "moduleNameMapper": {
      "^node-fetch$": "<rootDir>/node_modules/node-fetch/lib/index.js"
    },
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "dependencies": {
    "@twurple/api": "^7.2.1",
    "@twurple/auth": "^7.2.1",
    "axios": "^1.6.7",
    "dotenv": "^16.4.7",
    "form-data": "^4.0.1",
    "node-fetch": "^2.6.7",
    "openai": "^4.78.1",
    "spotify-web-api-node": "^5.0.2",
    "tmi.js": "^1.8.5",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0"
  }
}
